<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.TestWeatherApp.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.TestWeatherApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/backgroundTint</item>
    </style>

    <style name="Widget.TestWeatherApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">@dimen/btn_margin_bottom</item>
        <item name="android:backgroundTint">@color/backgroundTint</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/white</item>
    </style>
</resources>